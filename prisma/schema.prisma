// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
   id    String     @default(uuid()) @id
   name String
   email String @unique
   password String 
   meditationDuration Int
   totalMeditations Int
   meditationDates DateTime[]
}

model Meditation {
  id       String  @id @default(uuid())
  type String
  duration Int
  completed Boolean @default(false)
  createdAt DateTime
  pupil User @relation(fields: [pupilId], references: [id])
  pupilId String 
}
